<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <%= link_to books_path, class: "text-gray-400 hover:text-gray-600" do %>
            <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
          <% end %>
          <div>
            <h1 class="text-2xl font-bold text-gray-900"><%= @book.title %></h1>
            <p class="text-sm text-gray-500">Edit your mycology book</p>
          </div>
        </div>
        <div class="flex items-center space-x-3">
          <%= link_to book_path(@book), class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
            <svg class="mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
            Preview
          <% end %>
          <%= button_to book_path(@book), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this book and all its content?" }, class: "inline-flex items-center px-3 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50" do %>
            <svg class="mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
            Delete Book
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

    <!-- Book Info Section -->
    <div class="bg-white rounded-lg shadow mb-6 p-6">
      <%= form_with(model: @book, local: true) do |form| %>
        <div class="grid grid-cols-1 gap-6">
          <div>
            <%= form.label :title, "Book Title", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>
          <div>
            <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_area :description, rows: 2, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>
          <div class="flex justify-end">
            <%= form.submit "Save Book Info", class: "inline-flex justify-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Sections List -->
    <div class="space-y-6">
      <div class="flex justify-between items-center">
        <h2 class="text-xl font-semibold text-gray-900">Sections</h2>
        <button type="button" onclick="document.getElementById('new-section-form').classList.remove('hidden')" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
          <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          Add Section
        </button>
      </div>

      <!-- New Section Form -->
      <div id="new-section-form" class="hidden bg-white rounded-lg shadow p-6">
        <%= form_with(model: [@book, @book.sections.build], local: true) do |form| %>
          <div class="space-y-4">
            <div>
              <%= form.label :title, "Section Title", class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :title, placeholder: "e.g., Introduction, Chapter 1, Species Descriptions", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            </div>
            <div class="flex justify-end space-x-3">
              <button type="button" onclick="document.getElementById('new-section-form').classList.add('hidden')" class="px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                Cancel
              </button>
              <%= form.submit "Create Section", class: "px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Existing Sections -->
      <% if @book.sections.any? %>
        <div class="space-y-4" id="sections-list">
          <% @book.sections.each do |section| %>
            <div class="bg-white rounded-lg shadow" data-section-id="<%= section.id %>">
              <!-- Section Header -->
              <div class="p-6 border-b border-gray-200">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <div class="flex items-center space-x-3">
                      <div class="cursor-move text-gray-400 hover:text-gray-600">
                        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16" />
                        </svg>
                      </div>
                      <h3 class="text-lg font-medium text-gray-900"><%= section.title %></h3>
                      <span class="text-sm text-gray-500">(<%= pluralize(section.paragraphs.count, 'paragraph') %>)</span>
                    </div>
                  </div>
                  <div class="flex items-center space-x-2">
                    <button type="button" onclick="toggleSection(<%= section.id %>)" class="text-gray-400 hover:text-gray-600">
                      <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                      </svg>
                    </button>
                    <% if section.persisted? %>
                      <%= button_to book_section_path(@book, section), method: :delete, data: { turbo_confirm: "Delete this section and all its paragraphs?" }, class: "text-red-600 hover:text-red-800" do %>
                        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>

              <!-- Section Content (Collapsible) -->
              <div id="section-<%= section.id %>" class="p-6 space-y-4">
                <% if section.persisted? %>
                  <!-- Add Paragraph Button -->
                  <button type="button" onclick="showNewParagraphForm(<%= section.id %>)" class="w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                    <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                    </svg>
                    Add Paragraph
                  </button>

                  <!-- New Paragraph Form -->
                  <div id="new-paragraph-form-<%= section.id %>" class="hidden bg-gray-50 rounded-lg p-4">
                    <%= form_with(model: [@book, section, section.paragraphs.build], local: true) do |form| %>
                      <div class="space-y-3">
                        <%= form.text_area :content, rows: 4, placeholder: "Write your paragraph content here...", class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                        <div class="flex justify-end space-x-3">
                          <button type="button" onclick="hideNewParagraphForm(<%= section.id %>)" class="px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                            Cancel
                          </button>
                          <%= form.submit "Add Paragraph", class: "px-3 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                <% end %>

                <!-- Paragraphs List -->
                <% if section.paragraphs.any? %>
                  <div class="space-y-3" id="paragraphs-list-<%= section.id %>">
                    <% section.paragraphs.each do |paragraph| %>
                      <div class="bg-gray-50 rounded-lg p-4 hover:bg-gray-100" data-paragraph-id="<%= paragraph.id %>">
                        <div class="flex items-start space-x-3">
                          <div class="cursor-move text-gray-400 hover:text-gray-600">
                            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16" />
                            </svg>
                          </div>
                          <div class="flex-1">
                            <p class="text-sm text-gray-700"><%= truncate(strip_tags(paragraph.content), length: 200) %></p>
                          </div>
                          <div class="flex items-center space-x-2">
                            <% if paragraph.persisted? %>
                              <button type="button" onclick="editParagraph(<%= paragraph.id %>)" class="text-indigo-600 hover:text-indigo-800">
                                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                </svg>
                              </button>
                              <%= button_to book_section_paragraph_path(@book, section, paragraph), method: :delete, data: { turbo_confirm: "Delete this paragraph?" }, class: "text-red-600 hover:text-red-800" do %>
                                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                </svg>
                              <% end %>
                            <% end %>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  </div>
                <% else %>
                  <p class="text-center text-sm text-gray-500 py-4">No paragraphs yet. Click "Add Paragraph" to get started.</p>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12 bg-white rounded-lg shadow">
          <svg class="mx-auto h-12 w-12 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No sections</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by adding your first section.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
function toggleSection(sectionId) {
  const section = document.getElementById(`section-${sectionId}`);
  section.classList.toggle('hidden');
}

function showNewParagraphForm(sectionId) {
  document.getElementById(`new-paragraph-form-${sectionId}`).classList.remove('hidden');
}

function hideNewParagraphForm(sectionId) {
  document.getElementById(`new-paragraph-form-${sectionId}`).classList.add('hidden');
}

function editParagraph(paragraphId) {
  // TODO: Implement inline editing
  alert('Edit functionality coming soon!');
}
</script>
