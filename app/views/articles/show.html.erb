<div class="max-w-4xl mx-auto py-8 px-4">
  <!-- Article Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-4xl font-bold text-gray-900"><%= @article.title %></h1>
      <% if user_signed_in? && @article.user_id == current_user.id %>
        <div class="flex space-x-2">
          <%= link_to edit_article_path(@article), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Edit
          <% end %>
          <%= button_to article_path(@article), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this article?" }, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
            Delete
          <% end %>
        </div>
      <% end %>
    </div>

    <% if @article.description.present? %>
      <div class="prose max-w-none text-lg text-gray-600 mb-4">
        <h2><%= @article.description %></h2>
      </div>
    <% end %>

    <div class="flex items-center text-sm text-gray-500 space-x-4">
      <% if @article.user %>
        <span>By <%= @article.user.display_name %></span>
      <% end %>
      <span>Updated <%= time_ago_in_words(@article.updated_at) %> ago</span>
    </div>
  </div>

  <!-- Article Content -->
  <% if @article.body.present? %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <div class="px-6 py-8 prose max-w-none trix-content" data-controller="glossary">
        <%= @article.body %>
      </div>
    </div>
  <% else %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No content</h3>
      <p class="mt-1 text-sm text-gray-500">This article doesn't have any content yet.</p>
      <% if user_signed_in? && @article.user_id == current_user.id %>
        <div class="mt-6">
          <%= link_to "Edit Article", edit_article_path(@article), class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Back Link -->
  <div class="mt-8">
    <%= link_to "â† Back to Articles", articles_path, class: "text-indigo-600 hover:text-indigo-800" %>
  </div>
</div>
