<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <%= link_to articles_path, class: "text-gray-400 hover:text-gray-600" do %>
            <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
          <% end %>
          <div>
            <h1 class="text-2xl font-bold text-gray-900"><%= @article.title %></h1>
            <p class="text-sm text-gray-500">Edit your mycology article</p>
          </div>
        </div>
        <div class="flex items-center space-x-3">
          <%= link_to article_path(@article), class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
            <svg class="mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
            Preview
          <% end %>
          <%= button_to article_path(@article), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this article and all its content?" }, class: "inline-flex items-center px-3 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50" do %>
            <svg class="mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
            Delete Article
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

    <!-- Article Editor -->
    <div class="bg-white rounded-lg shadow p-6" data-controller="paste-handler">
      <%= form_with(model: @article) do |form| %>
        <div class="space-y-6">
          <!-- Title -->
          <div class="relative" data-controller="autocomplete">
            <%= form.label :title, "Article Title", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :title,
                class: "block w-full text-2xl font-bold border-0 border-b-2 border-gray-200 focus:border-indigo-500 focus:ring-0 px-0 py-2",
                placeholder: "Enter article title...",
                data: {
                  action: "keyup->autocomplete#search blur->autocomplete#blur",
                  autocomplete_target: "input"
                } %>
            <div data-autocomplete-target="results" class="autocomplete-results hidden"></div>
          </div>

          <!-- Description -->
          <div class="relative" data-controller="autocomplete paste-handler">
            <%= form.label :description, "Brief Description (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :description,
                rows: 3,
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
                placeholder: "Brief summary of the article...",
                data: {
                  action: "paste->paste-handler#cleanPaste keyup->autocomplete#search blur->autocomplete#blur",
                  autocomplete_target: "input"
                } %>
            <div data-autocomplete-target="results" class="autocomplete-results hidden"></div>
            <p class="mt-1 text-xs text-gray-500">Type genus/species names for autocomplete suggestions</p>
          </div>

          <!-- Body Content with Toolbar -->
          <div data-controller="autocomplete text-formatter paste-handler" data-text-formatter-max-length-value="16777215">
            <div class="flex items-center justify-between mb-2">
              <%= form.label :body, "Article Content", class: "block text-sm font-medium text-gray-700" %>
              <div class="flex items-center space-x-1 flex-wrap gap-y-1">
                <!-- Headings -->
                <button type="button" data-action="click->text-formatter#makeH1" class="px-2 py-1 text-gray-600 hover:text-indigo-600 hover:bg-gray-100 rounded text-sm font-bold" title="Heading 1">
                  H1
                </button>
                <button type="button" data-action="click->text-formatter#makeH2" class="px-2 py-1 text-gray-600 hover:text-indigo-600 hover:bg-gray-100 rounded text-sm font-bold" title="Heading 2">
                  H2
                </button>
                <button type="button" data-action="click->text-formatter#makeH3" class="px-2 py-1 text-gray-600 hover:text-indigo-600 hover:bg-gray-100 rounded text-sm font-bold" title="Heading 3">
                  H3
                </button>
                <span class="text-gray-300">|</span>

                <!-- Text formatting -->
                <button type="button" data-action="click->text-formatter#makeBold" class="px-2 py-1 text-gray-600 hover:text-indigo-600 hover:bg-gray-100 rounded font-bold" title="Bold">
                  B
                </button>
                <button type="button" data-action="click->text-formatter#makeItalic" class="px-2 py-1 text-gray-600 hover:text-indigo-600 hover:bg-gray-100 rounded italic" title="Italic">
                  I
                </button>
                <button type="button" data-action="click->text-formatter#makeUnderline" class="px-2 py-1 text-gray-600 hover:text-indigo-600 hover:bg-gray-100 rounded underline" title="Underline">
                  U
                </button>
                <button type="button" data-action="click->text-formatter#makeStrikethrough" class="px-2 py-1 text-gray-600 hover:text-indigo-600 hover:bg-gray-100 rounded line-through" title="Strikethrough">
                  S
                </button>
                <span class="text-gray-300">|</span>

                <!-- Lists -->
                <button type="button" data-action="click->text-formatter#makeBulletList" class="px-2 py-1 text-gray-600 hover:text-indigo-600 hover:bg-gray-100 rounded" title="Bullet list">
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                  </svg>
                </button>
                <button type="button" data-action="click->text-formatter#makeNumberedList" class="px-2 py-1 text-gray-600 hover:text-indigo-600 hover:bg-gray-100 rounded text-sm" title="Numbered list">
                  1.
                </button>
                <span class="text-gray-300">|</span>

                <!-- Link & Paragraph -->
                <button type="button" data-action="click->text-formatter#insertLink" class="px-2 py-1 text-gray-600 hover:text-indigo-600 hover:bg-gray-100 rounded" title="Insert link">
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                  </svg>
                </button>
                <button type="button" data-action="click->text-formatter#insertParagraph" class="px-2 py-1 text-gray-600 hover:text-indigo-600 hover:bg-gray-100 rounded" title="Insert paragraph break">
                  Â¶
                </button>
              </div>
            </div>
            <div class="relative">
              <%= form.text_area :body,
                  rows: 20,
                  class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 font-mono text-sm",
                  placeholder: "Paste or write your article content here. Formatting will be automatically cleaned when pasting...",
                  data: {
                    action: "paste->paste-handler#cleanPaste input->text-formatter#updateCharCount keyup->autocomplete#search blur->autocomplete#blur",
                    text_formatter_target: "textarea",
                    autocomplete_target: "input"
                  } %>
              <div data-autocomplete-target="results" class="autocomplete-results hidden"></div>
            </div>
            <div class="mt-2 flex items-center justify-between">
              <p class="text-xs text-gray-500">
                Tip: Paste text from any source - formatting will be cleaned automatically. Type genus/species names for autocomplete suggestions.
              </p>
              <div data-text-formatter-target="charCount" class="text-xs text-gray-500"></div>
            </div>
          </div>

          <!-- Save Button -->
          <div class="flex justify-end">
            <%= form.submit "Save Article", class: "inline-flex justify-center px-6 py-3 border border-transparent shadow-sm text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
